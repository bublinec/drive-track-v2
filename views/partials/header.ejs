        <!-- Content containers -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    
                    <!-- Flash message -->
                    <div class="mt-4">
                        <!-- error is an empty arr by default which is true -->
                        <% if(error && error.length > 0){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %> 
                            </div>
                        <% } %>
                        <% if(success && success.length > 0){ %> 
                            <div class="alert alert-success" role="alert">
                                <%= success %> 
                            </div>
                        <% } %> 
                    </div>


                    <!-- New vehicle modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Add new vehicle</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <form action="/vehicles" method="post">
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1">Brand</label>
                                                    <input class="form-control py-4" type="text" name="vehicle[brand]" placeholder="Ford" required/>
                                                </div>
                                            </div>
                                
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1">Model</label>
                                                    <input class="form-control py-4" name="vehicle[model]" type="text" placeholder="Mondeo" required/></div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1">Mileage</label>
                                            <input class="form-control py-4" name="vehicle[mileage]" type="number" placeholder="134 000" required/>
                                        </div>
                                
                                        <div class="form-group">
                                            <label class="small mb-1">Image</label>
                                            <input class="form-control py-4" name="vehicle[image]" type="url" placeholder="Enter url of the image"/>
                                        </div>
                                        <div class="form-group float-right">
                                            <button class="btn btn-primary">Submit</button>
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                        </div>
                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>

